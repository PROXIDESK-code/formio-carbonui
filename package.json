{
  "name": "@formio/uswds",
  "version": "1.3.3",
  "description": "US Web Design System templates for form.io",
  "main": "lib/index.js",
  "scripts": {
    "test:coverage": "nyc --reporter=text mocha --reporter spec './{,!(node_modules)/**/}*.spec.js'",
    "test": "mocha --require ts-node/register --reporter spec \"./{,!(node_modules)/**/}*.spec.ts",
    "watch": "tsc -w",
    "build": "tsc && gulp build && cp lib/css/styles.css dist/uswds.css && webpack && webpack --config webpack.prod.js",
    "lint": "tslint -p .",
    "prepublish": "npm run build"
  },
  "pre-commit": [
    "lint"
  ],
  "files": [
    "lib"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/formio/uswds.git"
  },
  "keywords": [
    "Form.io",
    "USWDS",
    "Us",
    "Web",
    "Design",
    "Standards"
  ],
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/ejs": "^3.0.2",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.11.1",
    "@types/sinon": "^9.0.0",
    "chai": "^4.2.0",
    "formiojs": "^4.9.18",
    "gulp": "^4.0.2",
    "gulp-insert": "^0.5.0",
    "gulp-rename": "^2.0.0",
    "gulp-sass": "^4.0.2",
    "gulp-template": "^5.0.0",
    "mocha": "^7.1.1",
    "nyc": "^15.0.1",
    "pre-commit": "^1.2.2",
    "sinon": "^9.0.2",
    "ts-node": "^8.8.2",
    "ts-sinon": "^1.0.25",
    "tslint": "^6.1.1",
    "typescript": "^3.8.3",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11"
  },
  "author": "Randall Knutson <randall@form.io>",
  "license": "OSLv3",
  "bugs": {
    "url": "https://github.com/formio/uswds/issues"
  },
  "homepage": "https://github.com/formio/uswds#readme"
}
