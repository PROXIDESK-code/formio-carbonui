<span class="usa-checkbox">
  <{{ctx.input.type}}
    id="{{ctx.instance.id}}-{{ctx.component.key}}"
    ref="input"
    class="usa-checkbox__input"
    {% for (var attr in ctx.input.attr) { %}
    {{attr}}="{{ctx.input.attr[attr]}}"
    {% } %}
    {% if (ctx.checked) { %}checked=true{% } %}
    aria-required="{{ctx.component.validate.required}}"
    {% if (ctx.component.description) { %}
    aria-describedby="d-{{ctx.instance.id}}-{{ctx.component.key}}"
    {% } %}
  ></{{ctx.input.type}}>
  <label
    ref="label"
    class="{{ctx.input.labelClass}} usa-checkbox__label padding-left-0 text-indent-0"
    for="{{ctx.instance.id}}-{{ctx.component.key}}"
  >
    {{ctx.input.label}}
    {{ctx.input.content}}
  </label>
  {% if (ctx.component.tooltip) { %}
  <i ref="tooltip" aria-haspopup="true" class="{{ctx.iconClass('question-sign')}} text-base" tabindex="0" title="{{ctx.component.tooltip}}"></i>
  {% } %}
</span>
