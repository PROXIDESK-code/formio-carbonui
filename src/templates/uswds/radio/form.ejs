<fieldset
  class="usa-fieldset"
  ref="fieldset"
  aria-labelledby="l-{{ctx.instance.id}}-{{ctx.component.key}} {% if (ctx.component.description) { %}d-{{ctx.instance.id}}-{{ctx.component.key}}{% } %}"
>
  <legend id="l-{{ctx.instance.id}}-{{ctx.component.key}}" ref="label" class="font-sans-md position-relative{{ctx.component.validate && ctx.component.validate.required ? ' field-required' : ''}}">
    {{ctx.component.label}}
    {% if (ctx.component.tooltip) { %}
      <i ref="tooltip" class="{{ctx.iconClass('question-sign')}} text-base" tabindex="0" aria-label="{{ctx.component.tooltip}}"></i>
    {% } %}
  </legend>

  <div
    ref="messageContainer"
    class="text-secondary-dark width-full margin-top-05 formio-errors"
  ></div>

  {% ctx.values.forEach(function(item) { %}
  <div class="usa-{{ctx.component.type === "selectboxes" ? "checkbox" : "radio"}} {{ctx.inline ? 'display-inline float-left margin-right-1' : ''}}" ref="wrapper">
    <{{ctx.input.type}}
      ref="input"
      class="usa-{{ctx.component.type === "selectboxes" ? "checkbox" : "radio"}}__input"
      {% for (var attr in ctx.input.attr) { %}
      {{attr}}="{{ctx.input.attr[attr]}}"
      {% } %}
      value="{{item.value}}"
      {% if (ctx.value && (ctx.value === item.value || (typeof ctx.value === 'object' && ctx.value.hasOwnProperty(item.value) && ctx.value[item.value]))) { %}
      checked=true
      {% } %}
      id="{{ctx.id}}{{ctx.row}}-{{item.value}}"
      aria-required="{{ctx.input.component.validate.required}}"
    >
    <label class="{{ctx.component.type === "selectboxes" ? "usa-checkbox__label" : "usa-radio__label"}}" for="{{ctx.id}}{{ctx.row}}-{{item.value}}">{{ctx.t(item.label)}}</label>
  </div>
  {% }) %}

  {% if (ctx.component.description) { %}
    <div class="text-base-dark">
      <span id="d-{{ctx.instance.id}}-{{ctx.component.key}}">{{ctx.t(ctx.component.description)}}</span>
    </div>
  {% } %}
</fieldset>
