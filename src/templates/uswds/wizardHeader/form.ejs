<div aria-label="Wizard" id="{{ ctx.wizardKey }}-header">
  <div ref="{{ ctx.wizardKey }}-progressbar" class="stepper-row" tabindex="0" aria-label="Progress bar, Step {{ctx.currentPage + 1}} of {{ctx.panels.length}}, {{ctx.panels[ctx.currentPage].title}}">
    {% ctx.panels.forEach(function(panel, index) { %}
    <div data-index="{{index}}" class="stepper-item {{ctx.currentPage >= index ? 'stepper-item-active' : ''}}"></div>
    {% }) %}
  </div>
  <div class="stepper-info"
       tabindex="-1"
       aria-label="Progress bar, Step {{ctx.currentPage + 1}} of {{ctx.panels.length}}, {{ctx.panels[ctx.currentPage].title}}"
  >
    <span class="usa-sr-only">Progress bar, step</span>
    <span class="stepper-info-step">{{ctx.currentPage + 1}}</span>
    <span class="stepper-info-total">of {{ctx.panels.length}}</span>
    <span class="stepper-info-text">{{ctx.panels[ctx.currentPage].title}}</span>
  </div>
</div>
